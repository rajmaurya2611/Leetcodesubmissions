class Solution {
    public boolean checkString(String s) 
    {
        int n=s.length();
        for(int i=0;i<n;i++)
        {
            if(s.charAt(i)=='b')
            {
                while(i<n)
                {
                    if(s.charAt(i)=='a')
                        return false;
                    else
                        i++;
                }
            }
        }
        return true;
    }
}
